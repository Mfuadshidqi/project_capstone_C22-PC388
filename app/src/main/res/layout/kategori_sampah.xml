<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="15dp"
    android:backgroundTint="@color/base_color_light">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <ImageView
            android:id="@+id/img_sampah"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/gambar_sampah"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_jenis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/img_sampah"
            app:layout_constraintEnd_toEndOf="@id/img_sampah"
            app:layout_constraintStart_toStartOf="@+id/img_sampah"
            android:textColor="@color/base_color"
            android:fontFamily="@font/roboto_medium"
            android:textSize="16sp"
            android:textAlignment="center"
            tools:text="JENIS" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>